@model ProyectoXDDD.Models.Usuario;
@{
    ViewData["Registro"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <h3 class="text-center mb-4 ">Registrarse</h3>
            <form asp-action="Guardar" asp-controller="Tabla" method="post">
                    <div class="form-group">
                        <label for="text">Nombre</label>
                       @* <input type="text" class="form-control" id="name" placeholder="Ingresa tu nombre" required>*@
                        <input type="Name" id="name" asp-for="Nombre" class="form-control" placeholder="Ingresa tu nombre" required />
                    </div>
                    <div class="form-group">
                        <label for="text">Correo electrónico</label>
                        @*<input type="email" class="form-control" id="email" placeholder="Ingresa tu correo electrónico" required>*@
                        <input type="Email" id="email" asp-for="Email" class="form-control" placeholder="Ingresa tu correo electrónico" required />
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña</label>
                        <input type="Password" id="password" asp-for="Contrasenia" class="form-control" placeholder="Ingresa tu contraseña" required />
                    </div>


                    <button type="submit" class="btn  btn-block" id="button">Registrarse</button>
                </form>
            </div>
        </div>
    </div>
